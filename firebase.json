{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": [
        {
            "rules": "storage.rules",
            "bucket": "result-road.firebasestorage.app"
        }
    ],
    "functions": [
        {
            "source": "functions",
            "codebase": "default"
        }
    ],
    "hosting": {
        "public": "out",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}